    }

    /*
    .mdl-cell {
        background-color: #bbb;
        height: 50px;
    }
*/
    nav.mdl-navigation .mdl-badge[data-badge]:after {
        top: 5px;
        right: -8px;
    }

    @media screen and (max-width: 400px) {
        .esconde-celular {
            display: none;
        }
        nav.mdl-navigation .mdl-badge[data-badge]:after {
            right: 5px;
        }
    }

    @media screen and (min-width: 401px) {
        .mostrar-celular {
            display: none;
        }
    }

    /*
alterar tamanho do icon
*/
    .md-18 {
