<style>
    .container-menu {
        position: relative;
        width: 305px;
        display: inline-block;
        margin: 5px;
        vertical-align: top;
    }

    .background-menu {
        background: white;
        height: 148px;
        width: 100%
    }

    .bar-menu-right,
    .bar-menu-left {
        box-sizing: border-box;
        background: #3F5185;
        color: white;
        width: 100%;
        padding: 16px;
    }

    .bar-menu-right {
        text-align: right;
    }

    .bar-menu-left {
        text-align: left;
    }

    .mdl-grid {
        min-height: 320px;
        color: #757575 !important;
    }

    .background-cinza {
        background: rgb(226, 222, 222);
        min-height: 50px;

    }

    .transparent {
